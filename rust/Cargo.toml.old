[workspace]
members = [
    # ".",  # Temporarily excluded to avoid rusqlite/sqlx conflict
    "crates/iqrah-core",
    "crates/iqrah-storage",
    "crates/iqrah-api",
    "crates/iqrah-cli",
]
resolver = "2"

# Existing package (will be migrated to iqrah-api)
[package]
name = "rust_lib_iqrah"
version = "0.1.0"
edition = "2021"

[lib]
crate-type = ["cdylib", "staticlib", "rlib"]
path = "src/lib.rs"

[dependencies]
flutter_rust_bridge = "=2.11.1"
anyhow = "1.0.99"
rusqlite = { version = "0.37", features = ["bundled"] }
uuid = { version = "1.18", features = ["v4"] }
r2d2 = "0.8"
r2d2_sqlite = "0.31"
once_cell = "1.21"
chrono = { version = "0.4", features = ["serde"] }
async-trait = "0.1.89"
fsrs = "5.1.0"
ciborium = "0.2"
zstd = "0.13"
rand = "0.9"
rand_distr = "0.5"
serde.workspace = true
tokio.workspace = true
serde_json.workspace = true
serde_plain = "1.0.2"
serde_repr = "0.1.20"
serde_path_to_error = "0.1.17"
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["fmt"] }

# Shared workspace dependencies
[workspace.dependencies]
# Error handling
anyhow = "1.0.99"
thiserror = "1.0"

# Async runtime
tokio = { version = "1.47.1", features = ["full"] }

# Database
# Note: Using bundled to avoid conflicts with rusqlite during migration
sqlx = { version = "0.7", features = ["runtime-tokio-native-tls", "sqlite", "macros", "migrate"] }

# Traits
async-trait = "0.1.89"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# Time
chrono = { version = "0.4", features = ["serde"] }

# Logging
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["fmt"] }

# Global state
once_cell = "1.21"

[lints.rust]
unexpected_cfgs = { level = "warn", check-cfg = ['cfg(frb_expand)'] }
